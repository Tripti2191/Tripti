{  
   "customerOrderCreditAuthorizationRequest":{  
      "transactionHeader":{  
         "consumerName":$consumerName,
         "consumerTransactionId":$consumerTransactionId,
         "consumerTransactionDateTime":$consumerTransactionDateTime
      },
      "customer":{  
         "firstName":$firstName,
         "middleName":$middleName,
         "lastName":$lastName,
         "paymentDetails":{  
            "paymentcard":{  
               "cardHighValueToken":$cardHighValueToken,
               "expirationDate":$expirationDate,
               "cardType":$cardType,
               "amount":$amount,
               "applicationTransactionNumber":$applicationTransactionNumber,
               "billingAddress":{  
                  "name":$name,
                  "address":{  
                     "address1":$address1,
                     "address2":$address2,
                     "city":$city,
                     "state":$state,
                     "postalCode":$postalCode,
                     "country":$country
                  }
               }
            }
         }
      },
      "order":{  
         "orderType":$orderType,
         "brandType":$brandType,
         "orderSource":$orderSource,
         "customerOrderNumber":$customerOrderNumber,
         "originalOrderNumber":$originalOrderNumber,
         "orderDate":$orderDate,
         "accounting":{  
            "costCenter":$costCenter,
            "costCenterDesc":$costCenterDesc,
            "poNumber":$poNumber,
            "release":$release,
            "serialNumber":$serialNumber
         },
         "orderDetail":{  
            "totals":{  
               "subTotal":$subTotal,
               "tax":$tax,
               "delivery":$delivery,
               "discount":$discount,
               "misc":$misc,
               "total":$total
            },
            "item":{  
               "lineNumber":$lineNumber,
               "sku":$sku,
               "odSku":$odSku,
               "customerSku":$customerSku,
               "vendorProductCode":$vendorProductCode,
               "customProductCode":$customProductCode,
               "quantity":$quantity,
               "unitPrice":$unitPrice,
               "tax":$tax,
               "discount":$discount,
               "cost":$cost,
               "unitOfMeasure":$unitOfMeasure,
               "description":$description,
               "comments":$comments,
               "costCenter":$costCenter,
               "costCenterDesc":$costCenterDesc,
               "costCenterSeq":$costCenterSeq,
               "costCenterRoute":$costCenterRoute,
               "release":$release,
               "configID":$configID,
               "bundleID":$bundleID,
               "shipTo":{  
                  "@invLoc":$invLoc,
                  "InventoryLocation":$InventoryLocation,
                  "address":{  
                     "@id":$id,
                     "@seq":$seq,
                     "Name":$Name,
                     "shippingAddress":{  
                        "address1":$address1,
                        "address2":$address2,
                        "address3":$address3,
                        "city":$city,
                        "state":$state,
                        "postalCode":$postalCode,
                        "country":$country
                     },
                     "contact":{  
                        "email":$email,
                        "phoneNumber":$phoneNumber,
                        "faxNumber":$faxNumber
                     }
                  }
               }
            }
         }
      }
   }
}